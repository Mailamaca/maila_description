<?xml version="1.0"?>
<robot name="traxxas_summit" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Define robot constants -->
  <xacro:property name="base_width" value="0.32"/>
  <xacro:property name="base_length" value="0.563"/>
  <xacro:property name="base_height" value="0.180"/>

  <xacro:property name="wheel_radius" value="0.10"/>
  <xacro:property name="wheel_width" value="0.05"/>
  <xacro:property name="wheel_ygap" value="0.025"/>
  <xacro:property name="wheel_zoff" value="0.05"/>
  <xacro:property name="wheel_xoff" value="0.172828879"/>

  <xacro:property name="caster_xoff" value="0.14"/>

  <xacro:property name="math_pi" value="3.141516"/>

  <!-- Robot Base -->
  <link name="base_link">
    <visual>
      <origin xyz="${wheel_xoff} 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>



  <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 ${-(wheel_radius+wheel_zoff)}" rpy="0 0 0"/>
  </joint>



  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff + wheel_xoff} ${y_reflect*(base_width/2+wheel_ygap)} ${-wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="wheel_rear_left"   x_reflect="-1" y_reflect="1" />
  <xacro:wheel prefix="wheel_rear_right"  x_reflect="-1" y_reflect="-1" />
  <xacro:wheel prefix="wheel_front_left"  x_reflect="1"  y_reflect="1" />
  <xacro:wheel prefix="wheel_front_right" x_reflect="1"  y_reflect="-1" />

  <!-- 2D laser -->
  <link name="top_scanner_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.03"/>
      </geometry>
      <material name="Red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="top_scanner_joint" type="fixed">
    <parent link="base_link"/>
    <child link="top_scanner_link"/>
    <origin xyz="${wheel_xoff} 0 ${base_height/2 + 0.015}" rpy="0 0 0"/>
  </joint>
</robot>
